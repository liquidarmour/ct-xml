@import uk.gov.hmrc.ct.box.CtOptionalString

@(id: String, box: CtOptionalString, labelMsgKey: String, name: String, currentContext: String = "CY_END", vertical: Boolean = false)(implicit messages: Messages)

@if(box.value.nonEmpty) {
    @if(vertical) {
        <tr>
            <td id="@{s"$id-label"}" colspan="2">@{Messages(labelMsgKey)}</td>
        </tr>
        <tr>
            @box.value.map { value =>
                <td id="@{s"$id-curr-val"}" class="strong figure" colspan="2" style="text-align: left">
                    <ix:nonNumeric contextRef="@currentContext" name="@name">@value</ix:nonNumeric>
                </td>
            }
        </tr>
    } else {
        <tr>
            <td id="@{s"$id-label"}">@{Messages(labelMsgKey)}</td>

            @box.value.map { value =>
                <td id="@{s"$id-curr-val"}" class="strong figure">
                    <ix:nonNumeric contextRef="@currentContext" name="@name">@value</ix:nonNumeric>
                </td>
            }
        </tr>
    }
}

